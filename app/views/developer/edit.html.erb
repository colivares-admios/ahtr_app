<div class="authform_large">
 
   <%= form_for(:person, :url => developer_path(@person.id), :html => { :method => :put, :role => 'form', :multipart => true}) do |f| %>

    <div class="col-md-12">
      <%= devise_error_messages! %>
       <h3>Create a New Developer</h3>
    </div>
  <div class="row">
<div class="col-md-6">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_area :address, :rows => 3,  class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :home_number %>
            <%= f.text_field :home_number, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :cel_number %>
            <%= f.text_field :cel_number, class: 'form-control' %>
          </div>
    </div>
    <div class="col-md-6">
          <div class="form-group">
              <%= f.label :Nationality %> </br>
              <%= f.select(:nationality, Person.countries.keys.map {|nation| [nation.titleize,nation]} )  %>
          </div> 
          <div class="form-group">
              <%= f.label :Type_Of_Identification %> </br>
              <%= f.select(:id_type, Person.id_types.keys.map {|id| [id.titleize,id]} )  %>
          </div> 
          <div class="form-group">
            <%= f.label :Identification_Number %>
            <%= f.text_field :id_number, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Birth_Day %>
            <%= f.date_field :birth_day, class: 'form-control' %>
          </div>






        
    </div>
    <div class="col-md-12">
      <%= f.submit 'Update Developer', :class => 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>
  <% end %>
</div>
