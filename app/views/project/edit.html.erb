<div class="authform_large">
   <%= form_for(@project, url: project_path(@project.id),  :html => { :method => :put, :role => 'form', :multipart => true}) do |f| %>
    <div class="col-md-12">
      <%= devise_error_messages! %>
      <% if @project.errors.any? %>
      <div id="error_explanation">
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
      </div>
      <% end %>
       <h3>Create a New Project</h3>
    </div>
  <div class="row">
    <div class="col-md-6">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
          </div>
           <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, rows: 12, class: 'form-control' %>
          </div>
    </div>
    <div class="col-md-6">
          <div class="form-group">
            <%= f.label :Client %>
            <%= select_tag :client_id, options_for_select(Client.all.collect {|u| [ u.name, u.id ] }, @project.client_id),  class: 'form-control'%>
          </div>  
    	   <div class="form-group">
            <%= f.label :Start_Date %>
            <%= f.date_field :start_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Finish_Date %>
            <%= f.date_field :finish_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Website %>
            <%= f.url_field :website, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Github_Repository %>
            <%= f.url_field :github, class: 'form-control' %>
          </div>
    </div>
    <div class="col-md-12">
      <%= f.submit 'Update Project', :class => 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div>
  <% end %>
</div>
