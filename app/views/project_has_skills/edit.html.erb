<div class="authform_large">
   <%= form_for(@project_skill, url: project_project_has_skill_path(@project.id, @project_skill.id), :html => { :method => :put, :role => 'form', :multipart => true}) do |f| %>
    <div class="col-md-12">
    	<%= devise_error_messages! %>
          <% if @project_skill.errors.any? %>
          <div id="error_explanation">
          <ul>
          <% @project_skill.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
          </div>
          <% end %>
       <h3>Associate Skill to <%= @project.name.to_s  %> Project</h3>
    </div>
    <div class="row">
      <div class="col-md-12">
            <div class="form-group">
                <%= f.label :Skill %> </br>
                <%= f.select(:skill_id, options_for_select(Skill.all.collect {|u| [ u.name, u.id ] }) , {},{ class:  'form-control', :disabled => true})  %>
            </div> 
             <div class="form-group">
              <%= f.label :Additional_notes %>
              <%= f.text_area :note, rows: 5, class: 'form-control' %>
            </div>     
      </div>
      <div class="col-md-12">
        <%= f.submit 'Associate Skill', :class => 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
</div>